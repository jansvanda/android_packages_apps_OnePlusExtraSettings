<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/statusbar_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

      <PreferenceCategory
            android:title="@string/action_cat_misc"  />

        <com.beast.settings.preferences.SystemSettingSwitchPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:defaultValue="false" />

        <com.beast.settings.preferences.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:title="@string/double_tap_to_sleep_title"
        android:summary="@string/double_tap_to_sleep_summary"
        android:defaultValue="true" />

   <PreferenceCategory
       android:key="carrier_label_category"
       android:title="@string/carrier_category">
       
       <com.beast.settings.preferences.SystemSettingListPreference
           android:key="status_bar_show_carrier"
           android:title="@string/show_carrier_title"
           android:dialogTitle="@string/carrier_options"
           android:entries="@array/carrier_label_entries"
           android:entryValues="@array/carrier_label_values"
           android:defaultValue="1" />
       <Preference
           android:key="custom_carrier_label"
           android:title="@string/custom_carrier_label_title" />
   </PreferenceCategory>

      <PreferenceCategory
            android:title="@string/icon_cat_misc"  />
        <com.beast.settings.preferences.SystemSettingSwitchPreference
             android:key="bluetooth_show_battery"
             android:title="@string/bluetooth_battery_title"
             android:summary="@string/bluetooth_battery_summary"
             android:defaultValue="false"/>

       <com.beast.settings.preferences.SystemSettingSwitchPreference
            android:key="show_fourg_icon"
            android:title="@string/show_fourg_icon_title"
            android:summary="@string/show_fourg_icon_summary"
             android:defaultValue="false"/>
        
      <com.beast.settings.preferences.SystemSettingListPreference
         android:key="status_bar_show_weather_temp"
         android:title="@string/statusbar_weather_title"
         android:dialogTitle="@string/statusbar_weather_dialog_title"
         android:entries="@array/status_bar_weather_entries"
         android:entryValues="@array/status_bar_weather_values" />
        
      <PreferenceCategory
            android:title="@string/logo_cat_misc"  />
     <com.beast.settings.preferences.SystemSettingSwitchPreference
        android:key="status_bar_logo"
        android:title="@string/status_bar_logo_title"
        android:summary="@string/status_bar_logo_summary"
        android:defaultValue="false"/>

    <ListPreference
        android:key="status_bar_logo_style"
        android:entries="@array/status_bar_logo_style_entries"
        android:entryValues="@array/status_bar_logo_style_values"
        android:summary="%s"
        android:title="@string/status_bar_logo_style_title"
        android:dependency="status_bar_logo" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="status_bar_logo_color"
        android:title="@string/status_bar_logo_color_title"
        android:defaultValue="0xff009688"
        android:dependency="status_bar_logo" />

        
        <PreferenceCategory
            android:title="@string/ticker_cat_misc"  />

        <ListPreference
             android:key="ticker_mode"
             android:entries="@array/ticker_mode_entries"
             android:entryValues="@array/ticker_mode_values"
             android:summary="%s"
             android:title="@string/ticker_mode_title" />
           
      <PreferenceCategory
            android:title="@string/batterysaver_cat_misc"  />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
                android:key="status_bar_battery_saver_color"
                android:title="@string/status_bar_battery_saver_color_title"
                android:summary="@string/status_bar_battery_saver_color_summary"
                android:persistent="false"
                android:defaultValue="0xfff4511e" /> <!-- deep orange 600 -->

        <com.beast.settings.preferences.SystemSettingSwitchPreference
                android:key="battery_save_mode_color"
                android:title="@string/battery_saver_color_title"
                android:summary="@string/battery_saver_color_summary"
                android:defaultValue="false" />
      <PreferenceCategory
            android:title="@string/network_cat_misc"  />
            
        <com.beast.settings.preferences.SystemSettingSwitchPreference
                android:key="network_traffic_state"
                android:title="@string/network_traffic_state_title"
                android:summary="@string/network_traffic_state_summary"
                android:defaultValue="true" />

        <com.beast.settings.preferences.CustomSeekBarPreference
                android:key="network_traffic_autohide_threshold"
                android:title="@string/network_traffic_autohide_threshold_title"
                android:max="10"
                settings:min="0"
                settings:units="" />
        <PreferenceCategory
                android:title="@string/tuner_cat_misc"  />
        <Preference
                android:title="@string/statusbar_items_title" >
                <intent android:action="android.intent.action.MAIN"
                        android:targetPackage="com.android.systemui"
                        android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
        </Preference>

   


</PreferenceScreen>
